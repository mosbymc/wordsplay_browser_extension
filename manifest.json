{
  "manifest_version": 2,
  "name": "Chrome Wordsplay Extension",
  "version": "1.0.0",
  "description": "A Chrome browser extension for the wordsplay.net game to keep track of metrics during game play",
  "options_page": "options.html",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["http://www.wordsplay.net/w29/main.html"],
      "js": ["wordsplay_metrics.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "permissions": [
    "webNavigation",
    "declarativeContent",
    "activeTab",
    "storage"
  ],
  "page_action": {
    "default_title" : "Wordsplay Metrics",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/wordsplay_icon16.png",
      "32": "images/wordsplay_icon32.png",
      "48": "images/wordsplay_icon48.png"
    }
  },
  "icons": {
    "16": "images/wordsplay_icon16.png",
    "32": "images/wordsplay_icon32.png",
    "48": "images/wordsplay_icon48.png"
  }
}